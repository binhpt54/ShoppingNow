<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res/com.example.shoppingnow">
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@xml/bg_divider_gradient2"/>

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@xml/bg_titileviewpager"
        android:textColor="#AAFFFFFF"
        app:footerColor="#FFAA2222"
        app:footerLineHeight="0dp"
        app:footerIndicatorStyle="none"
        app:selectedColor="#FFFFFFFF"
        app:selectedBold="true"
        />
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@xml/bg_divider_gradient"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        />

</LinearLayout>