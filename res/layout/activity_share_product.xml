<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/title_share"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="6dp"
		android:gravity="center"
		android:layout_marginTop="4dp"
		android:text="Chọn nội dung chia sẻ"
		android:textSize="25dp"
		android:textColor="#000000"
		android:shadowColor="#FAFFFF"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="1" />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFc76508"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">
        <CheckBox 
            android:id="@+id/share_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="22dp"
            android:textColor="#000000"
            android:button="@xml/checkbox_ics"
            android:text="Tên"/>
        <CheckBox 
            android:id="@+id/share_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="22dp"
            android:textColor="#000000"
            android:button="@xml/checkbox_ics"
            android:text="Giá"/>
        <CheckBox 
            android:id="@+id/share_quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="22dp"
            android:textColor="#000000"
            android:button="@xml/checkbox_ics"
            android:text="Số Lượng"/>
        <CheckBox 
            android:id="@+id/share_place"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#000000"
            android:button="@xml/checkbox_ics"
            android:textSize="22dp"
            android:text="Địa Chỉ"/>
        <CheckBox 
            android:id="@+id/share_priority"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="22dp"
            android:button="@xml/checkbox_ics"
            android:textColor="#000000"
            android:text="Độ Ưu Tiên"/>
    </LinearLayout>
    
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#EFc76508"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/share_done"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@xml/my_btn_ics_transfrent"
            android:text="Xong"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView 
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#EFc76508"/>
        <Button 
            android:id="@+id/share_cancel"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@xml/my_btn_ics_transfrent"
            android:textSize="20dp"
            android:text="Hủy"/>
        
    </LinearLayout>
    
    

</LinearLayout>